{
  "name": "floorcraft-music-player",
  "version": "0.1.0",
  "author": {
    "name": "Karin Huber"
  },
  "description": "Music player for ballroom practice for multiple couples, which can rotate multiple playlists.",
  "main": "main.js",
  "scripts": {
    "electron": "ng build --base-href ./ && electron .",
    "pack": "electron-builder --dir",
    "release": "ng build --prod && electron-builder --windows --publish=never"
  },
  "private": true,
  "build": {
    "appId": "com.software-architects.floorcraftmusicplayer",
    "productName": "Floorcraft Music Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "mac": {
      "category": "public.app-category.lifestyle"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Music"
    },
    "win": {
      "icon": "build/icon.ico",
      "extraFiles": [
        {
          "from": "build/Floorcraft Music Player.visualelementsmanifest.xml",
          "to": "Floorcraft Music Player.visualelementsmanifest.xml"
        }
      ]
    }
  },
  "dependencies": {
    "@service-work/is-loading": "^3.0.3",
    "electron-store": "^5.1.0",
    "fs": "0.0.1-security",
    "lokijs": "^1.5.7",
    "music-metadata": "^4.8.0",
    "node-id3": "^0.1.13",
    "replace-in-file": "^5.0.2",
    "xml-escape": "^1.1.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~15.0.0",
    "@angular/animations": "^8.2.2",
    "@angular/cdk": "^8.1.3",
    "@angular/cli": "~8.2.1",
    "@angular/common": "~8.2.0",
    "@angular/compiler": "~8.2.0",
    "@angular/compiler-cli": "~8.2.0",
    "@angular/core": "~8.2.0",
    "@angular/flex-layout": "^8.0.0-beta.26",
    "@angular/forms": "~8.2.0",
    "@angular/language-service": "~8.2.0",
    "@angular/material": "^8.1.3",
    "@angular/platform-browser": "~8.2.0",
    "@angular/platform-browser-dynamic": "~8.2.0",
    "@angular/router": "~8.2.0",
    "@ngx-pwa/local-storage": "^8.2.1",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^8.9.5",
    "angular2-notifications": "^2.0.0",
    "codelyzer": "^5.0.0",
    "electron": "^7.1.10",
    "electron-builder": "^22.2.0",
    "electron-debug": "^3.0.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "material-design-icons": "^3.0.1",
    "ngx-electron": "^2.2.0",
    "path": "^0.12.7",
    "protractor": "~5.4.0",
    "rxjs": "~6.4.0",
    "ts-node": "~7.0.0",
    "tslib": "^1.10.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3",
    "zone.js": "~0.9.1"
  }
}
